<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/schedule_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/bandwidthBanner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/rose_red"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/schedule_banner"
        android:textColor="@color/white"
        android:textSize="26sp" />
    <Spinner
        android:id="@+id/quarterSelecter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/searchSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp" >
        <EditText
            android:id="@+id/schedule_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/username_only"
            android:inputType="text" >
        </EditText>
        <Button
            android:id="@+id/schedule_lookup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/searchButton" />
    </LinearLayout>
    <LinearLayout
		android:id="@+id/schedule_data_holder"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/white"
	    android:orientation="vertical" >
    </LinearLayout>
</LinearLayout>